<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed for notifications on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Allows running foreground services -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"
        tools:ignore="ForegroundServicesPolicy" />

    <!-- Allows internet communication for VPN -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Declare that our app *can* start a FGS on Android 14+ -->
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        tools:targetApi="34" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Main Screen -->
        <activity
            android:name="com.yourname.netspeedv3.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Network Speed Foreground Service -->
        <service
            android:name="com.yourname.netspeedv3.NetworkSpeedService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- VPN Service -->
        <service
            android:name="com.yourname.netspeedv3.MyVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            tools:ignore="VpnServicePolicy">

            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>

        </service>


    </application>

</manifest>
